    "scss",
    "pcss",
    "postcss"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.5.0",
    "@eslint-react/eslint-plugin": "^1.10.1",
    "@unocss/eslint-plugin": "^0.62.3",
    "eslint": "^9.10.0",
    "eslint-plugin-format": "^0.1.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7"
  }
}
